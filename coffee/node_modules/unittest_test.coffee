unittest = require 'unittest'

class UnittestTest extends unittest.TestCase
  name: 'UnittestTest'

  testAssertTrue: ->
    @assertTrue(true)

  testAssertFalse: ->
    @assertFalse(false)

  testAssertTrueError: ->
    try
      @assertTrue(false)
    catch error
      @assertEqual false, error.actual
      @assertEqual true, error.expected

(new UnittestTest).run()
