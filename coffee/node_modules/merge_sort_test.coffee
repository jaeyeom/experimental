#   Unittest for merge sort algorithm.

merge_sort = require('merge_sort')
unittest = require('unittest')

mergeSort = merge_sort.mergeSort

class MergeSortTest extends unittest.TestCase
  testEmpty: ->
    @assertArrayEqual [], mergeSort([])

  testSingle: ->
    @assertArrayEqual ['abc'], mergeSort(['abc'])

  testDouble: ->
    @assertArrayEqual ['abc', 'def'], mergeSort(['abc', 'def'])
    @assertArrayEqual ['abc', 'def'], mergeSort(['def', 'abc'])

  testBigger: ->
    array = [
      39,
      49,
      28,
      95,
      47,
      38,
      34,
      22]
    @assertArrayEqual [22, 28, 34, 38, 39, 47, 49, 95], mergeSort(array)

  testWithDup: ->
    array = [
      39,
      39,
      28,
      45,
      39,
      38,
      45,
      22]
    @assertArrayEqual [22, 28, 38, 39, 39, 39, 45, 45], mergeSort(array)


(new MergeSortTest 'MergeSortTest').run()
